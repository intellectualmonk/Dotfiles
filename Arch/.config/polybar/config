[module/menu]
type = custom/menu
format-spacing = 1
format-background = ${colors.secondary}
label-open = "  "
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.secondary}
label-close = "  "
label-close-foreground = ${colors.foreground}
label-separator = "│"
label-separator-foreground = ${colors.background}
# Top level
menu-0-0 = "  "
menu-0-0-exec = menu-open-1
menu-0-1 = "   "
menu-0-1-exec = menu-open-2
menu-0-2 = "  "
menu-0-2-exec = menu-open-3

# 1
menu-1-0 = "  "
menu-1-0-exec = wps &
menu-1-1 = "  "
menu-1-1-exec = evince  &
menu-1-2 = "  "
menu-1-2-exec = exo-open --launch FileManager
menu-1-3 = "   "
menu-1-3-exec = gimp &   
menu-1-4 = "  "
menu-1-4-exec = gcolor2 &

# 2
menu-2-0 = "  "
menu-2-0-exec = ./.config/polybar/lock.sh 
menu-2-1 = "  "
menu-2-1-exec = bspc quit -1
menu-2-2 = "  "
menu-2-2-exec = systemctl reboot
menu-2-3 = "   "
menu-2-3-exec = systemctl poweroff

# 3
menu-3-0 = "  "
menu-3-0-exec = firefox &
menu-3-1 = "  "
menu-3-1-exec = wps &  
 
