[colors]
background = #17181A
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #000000D
secondary = #C02A4C
alert = #bd2c40
menu = #ffffff

[bar/morgareth]
monitor = ${env:MONITOR:VGA-0}

width = 100%
height = 25
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Exo 2:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = FontAwesome:pixelsize=10;1

modules-left = mpd
modules-center = date clock  
modules-right = coretemps hddtemp nvidiatemp memory cpu    


[bar/morgareth1]
monitor = ${env:MONITOR:VGA-0}

width = 100%
height = 25
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

bottom  = true 

font-0 = Exo 2:pixelsize=8;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = menu load-average kernel bitcoin  
modules-center = bspwm  
modules-right = updates filesystem weather volume    
wm-restack = bspwm
override-redirect = true
enable-ipc = true
locale = pt_BR.UTF-8

[module/kernel]
type = custom/script
exec = hostnamectl | awk -F- '/Kernel/{ OFS="-";NF--; print }'|awk '{print $3}'
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/load-average]
type = custom/script
exec = cat /proc/loadavg | awk '!($4=$NF="")'
interval = 5
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/coretemps]
type = custom/script
exec-if = sensors
;exec = sensors  | awk '/Core 0/{print $3}' |awk '{if (match($0,/[0-9]+/,m)) print m[0]"°C"}'
exec = sensors|awk '/Core/{print substr($3, 2, length($3)-5)}'|awk '{if (match($0,/[0-9]+/,m)) print m[0]"°C"}'|tr '\n' ' '
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/bitcoin]
type = custom/script
#exec = curl -sSL https://coinbase.com/api/v1/prices/historical| awk -F"," 'NR==1{print $NF}'| sed 's/^/$/'   
exec =  ~/.config/polybar/bit.py
interval = 15
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/filesystem]
type = custom/script
;exec = df -h | awk '$NF=="/"{printf "%s\t\t",$5}'
exec =  df -h / | awk 'NR==2 {print $5}'
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/nvidiatemp]
type = custom/script
exec = nvidia-smi -q -d temperature|awk '{print $5}' | sed -n -r '/[0-9]{2}/{s/$/ºC/;p}'
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/hddtemp]
type = custom/script
exec = nc localhost 7634 | awk -F'|' '{print $4}' | sed 's/$/°C/'
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
reverse-scroll = false

ws-icon-0 = chat;
ws-icon-1 = term;
ws-icon-2 = www;
ws-icon-3 = archiver;
ws-icon-4 = code;
ws-icon-5 = media;
ws-icon-default = 

label-focused = %icon%
label-focused-background = #ee050505
label-focused-foreground =  ${colors.secondary}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = #444
label-empty-padding = 2

label-monocle = 
label-monocle-padding = 2
label-monocle-background = #171717
label-monocle-foreground =  ${colors.secondary}

label-floating = 
label-floating-padding = 2
label-floating-background = #171717
label-floating-foreground =  ${colors.secondary}

[module/fanspeed]
type = custom/script
exec-if = sensors
exec = sensors|awk '/fan1/{print $2,$3}'
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <icon-repeat> <icon-random> <bar-progress>  <label-song> %{B-}
format-stopped = <icon-prev>   <toggle>   <icon-next>   0:00/0:00   %{B-}
format-online-spacing = 0
format-prefix = " "
format-online-padding = 3
format-offline = <label-offline>
format-offline-foreground = #777
label-offline = mpd is off
label-song-maxlen = 45
label-song-ellipsis = true
label-time-foreground =  ${colors.secondary}

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

icon-random = 
icon-repeat = 

toggle-on-foreground = ${colors.foreground-alt}
toggle-off-foreground = #777

bar-progress-width = 20
bar-progress-indicator = 
bar-progress-indicator-foreground = ${colors.secondary}
bar-progress-indicator-font = 3
bar-progress-fill = ─
bar-progress-fill-foreground = ${colors.secondary}
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-foreground = ${colors.secondary}
bar-progress-empty-font = 3
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
exec = ~/.config/polybar/mail.py

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
exec = ~/.config/polybar/weather.py

[module/updates]
type = custom/script
interval = 1200
format = <label>
label = "%output:0:30%"
exec = sh ~/.config/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
label = %percentage%%

;[module/memory]
;type = internal/memory
;interval = 2
;format-prefix = " "
;format-prefix-foreground = ${colors.secondary}
;label = %percentage_used%%

[module/memory]
type = custom/script
exec =  awk '/^Mem/ {printf("%u%%", 100*$3/$2);}' <(free -m)
interval = 2
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/date]
type = custom/script
exec =  date +%a\ %d/%m/%y|sed -E 's/\S+/\u&/'
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/clock]
type = custom/script
exec = date +%H:%M:%S
interval = 1
format =  <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}

[module/volume]
type = internal/volume

format-volume =  <label-volume> <bar-volume>
label-volume = 
;label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground =  ${colors.secondary}

label-muted = %{F#666}%{F#ccfafafa} sound muted
label-muted-foreground = #99

bar-volume-width = 10
bar-volume-foreground-0 = #FF5555
bar-volume-foreground-1 = #FF5555
bar-volume-foreground-2 = #FF5555
bar-volume-foreground-3 = #FF5555
bar-volume-foreground-4 = #FF5555
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 =  ${colors.secondary}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 3
bar-volume-fill = ─
bar-volume-fill-font = 3
bar-volume-empty = ─
bar-volume-empty-font = 3
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}


