!!----------------------------------------------------------------------------!!
!! Xft (font) settings
!!----------------------------------------------------------------------------!!
 
xft*dpi: 96
xft*antialias: false
xft*hinting: full
xft*rgba: rgb
xft*autohint: false
xft*hintstyle: hintslight
xft*lcdfilter: lcddefault
 
!!----------------------------------------------------------------------------!!
!! mouse cursor settings
!!----------------------------------------------------------------------------!!
xcursor.theme:              Vanilla-DMZ
xcursor.size:               22
 
!!----------------------------------------------------------------------------!!
!! Extensions ~/.urxvt./ext
!!----------------------------------------------------------------------------!!

URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select,font-size,tabbed

!!----------------------------------------------------------------------------!!
!! general settings
!!----------------------------------------------------------------------------!!

urxvt.font:xft:pragmatapro for powerline:size=9,xft:meguri:pixelsize=9,xft:PowerlineSymbols:size=9,xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono:pixelsize=9,xft:FontAwesome:size=10
urxvt.boldFont:xft:pragmatapro for powerline:size=9,xft:meguri:pixelsize=9,xft:PowerlineSymbols:size=9,xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono:pixelsize=9,xft:FontAwesome:size=10
uRxvt.imFont:xft:pragmatapro for powerline:size=9,xft:meguri:pixelsize=9,xft:PowerlineSymbols:size=9,xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono:pixelsize=9,xft:FontAwesome:size=10
uRxvt.italicFont:xft:pragmatapro for powerline:size=9,xft:meguri:pixelsize=9,xft:PowerlineSymbols:size=9,xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono:pixelsize=9,xft:FontAwesome:size=10

URxvt.font-size.step: 4
URxvt.keysym.C-plus:      font-size:increase
URxvt.keysym.C-minus:    font-size:decrease
URxvt.keysym.C-equal:   font-size:reset
URxvt.keysym.C-slash:   font-size:show

urxvt.letterSpace: -1
Urxvt.scrollBar: false
URxvt.internalBorder: 4
URxvt.dynamicColors: on
URxvt.borderLess: false
URxvt.scrollBar: false
URxvt.urgentOnBell: True
URxvt.visualBell: False
URxvt.saveLines: 1024
URxvt.mouseWheelScrollPage: true
URxvt.termName: rxvt-unicode-256color
URxvt.geometry: 90x20

!!----------------------------------------------------------------------------!!
!! Clipboard
!!----------------------------------------------------------------------------!!

URxvt.keysym.C-S-C: perl:clipboard:copy
URxvt.keysym.C-S-V: perl:clipboard:paste
URxvt.keysym.C-S-W: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

!!----------------------------------------------------------------------------!!
!! Tabs
!!----------------------------------------------------------------------------!!

URxvt.tabbed.tabbar-fg : 161
URxvt.tabbed.tabbar-bg : 235
URxvt.tabbed.tab-fg : 15 
URxvt.tabbed.tab-bg : 235

!!----------------------------------------------------------------------------!!
!! Keyboard-selec
!!----------------------------------------------------------------------------!!

URxvt.keysym.C-Escape: perl:keyboard-select:activate
URxvt.keysym.C-S-S: perl:keyboard-select:search

!!----------------------------------------------------------------------------!!
!! Url-select
!!----------------------------------------------------------------------------!!

URxvt.keysym.C-S-U: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.button: 1
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true
URxvt.cursorBlink: true

!!----------------------------------------------------------------------------!!
!!Urxvt  colors
!!----------------------------------------------------------------------------!!

URxvt.colorIT:                        #DEDEDE
URxvt.colorBD:                        #B1ACAC
!URxvt.colorUL:                       #1A8A74
URxvt.highlightTextColor:             #ffffff
URxvt.highlightColor:                 #1A8A74
!URxvt.underlineColor:                #1D1F21

